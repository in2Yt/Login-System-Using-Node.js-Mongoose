<!doctype html>
<html lang="en">

<head>

    <!-- Primary Meta Tags -->
    <meta charset="utf-8">
    <title>Login - [?- data.WebSite.name ?]</title>
    <meta name="title" content="Login - [?- data.WebSite.name ?]" />
    <meta name="description" content="[?- data.WebSite.descripton ?]" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="[?- data.express.url ?]" />
    <meta property="og:title" content="Login - [?- data.WebSite.name ?]" />
    <meta property="og:description" content="[?- data.WebSite.descripton ?]" />
    <meta property="og:image" content="[?- data.WebSite.image ?]" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="[?- data.express.url ?]" />
    <meta property="twitter:title" content="Login - [?- data.WebSite.name ?]" />
    <meta property="twitter:description" content="[?- data.WebSite.descripton ?]" />
    <meta property="twitter:image" content="[?- data.WebSite.image ?]" />

    <!-- Style -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Snackbar/Style.Css">
    <link rel="stylesheet" href="../Login/Css/Style.Css">

    <!-- Meta Tags Generated with [?- data.express.url ?] -->

</head>

<body>
    <div class="section">
        <div class="container">
            <div class="row full-height justify-content-center">
                <div class="col-12 text-center align-self-center py-5">
                    <div class="section pb-5 pt-5 pt-sm-2 text-center">
                        [? if (type === 'login') { ?]
                        <h6 class="mb-0 pb-3">
                            <span>Log In </span>
                            <span>Sign Up</span>
                        </h6>
                        [? } else if (type === 'register') { ?]
                        <h6 class="mb-0 pb-3">
                            <span>Sign Up</span>
                            <span>Log In </span>
                        </h6>
                        [? } ?]
                        <input class="checkbox" type="checkbox" id="reg-log" name="reg-log" />
                        <label for="reg-log"></label>
                        <div class="card-3d-wrap mx-auto">
                            <div class="card-3d-wrapper">

                                [? if (type === 'login') { ?]
                                <div class="card-front" type="login">
                                    [? } else if (type !== 'login') { ?]
                                    <div class="card-back" type="login">
                                        [? } ?]

                                        <div class="center-wrap">
                                            <div class="section text-center">
                                                <h4 class="mb-4 pb-3">Log In</h4>
                                                <div class="form-group">
                                                    <input type="email" class="form-style" placeholder="Email"
                                                        javascript="login-email">
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    <input type="password" class="form-style" placeholder="Password"
                                                        javascript="login-password">
                                                    <i class="input-icon uil uil-lock-alt"></i>
                                                </div>
                                                <button class="btn mt-4" datatype="login" id="suplogin">Login</button>
                                                <p class="mb-0 mt-4 text-center">
                                                    <button class="link" datatype="forgot_password"
                                                        id="forgot_password">Forgot your
                                                        password?</button>
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                    [? if (type === 'register') { ?]
                                    <div class="card-front" type="register">
                                        [? } else if (type !== 'register') { ?]
                                        <div class="card-back" type="register">
                                            [? } ?]
                                            <div class="center-wrap">
                                                <div class="section text-center">
                                                    <h4 class="mb-3 pb-3">Sign Up</h4>
                                                    <div class="form-group">
                                                        <input type="text" class="form-style" placeholder="Full Name"
                                                            javascript="signup-name">
                                                        <i class="input-icon uil uil-user"></i>
                                                    </div>
                                                    <div class="form-group mt-2">
                                                        <input type="text" class="form-style" placeholder="Username"
                                                            javascript="signup-username">
                                                        <i class="input-icon uil uil-users-alt"></i>
                                                    </div>
                                                    <div class="form-group mt-2">
                                                        <input type="email" class="form-style" placeholder="Email"
                                                            javascript="signup-email">
                                                        <i class="input-icon uil uil-at"></i>
                                                    </div>
                                                    <div class="form-group mt-2">
                                                        <input type="password" class="form-style" placeholder="Password"
                                                            javascript="signup-password">
                                                        <i class="input-icon uil uil-lock-alt"></i>
                                                    </div>
                                                    <button class="btn mt-4" datatype="register"
                                                        id="register">Register</button>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/Snackbar/index.js"></script>
    <script src="../Login/JavaScript/index.js"></script>
</body>

</html>